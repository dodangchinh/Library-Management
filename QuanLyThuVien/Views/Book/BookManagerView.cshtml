@{
    ViewBag.Title = "BookManagerView";
}

<div class="container my-4">
    <h2 class="text-primary text-center mb-4">Quản Lý Sách</h2>
    <ul class="nav nav-tabs" id="bookManagerTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="book-tab" data-bs-toggle="tab" data-bs-target="#book" type="button" role="tab" aria-controls="book" aria-selected="true">
                Danh mục Sách
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="bookISBN-tab" data-bs-toggle="tab" data-bs-target="#bookISBN" type="button" role="tab" aria-controls="bookISBN" aria-selected="false">
                ISBN
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="bookTitle-tab" data-bs-toggle="tab" data-bs-target="#bookTitle" type="button" role="tab" aria-controls="bookTitle" aria-selected="false">
                Tiêu đề
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="categoryBook-tab" data-bs-toggle="tab" data-bs-target="#categoryBook" type="button" role="tab" aria-controls="categoryBook" aria-selected="false">
                Thể loại
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="author-tab" data-bs-toggle="tab" data-bs-target="#author" type="button" role="tab" aria-controls="author" aria-selected="false">
                Tác Giả
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="publisher-tab" data-bs-toggle="tab" data-bs-target="#publisher" type="button" role="tab" aria-controls="publisher" aria-selected="false">
                Nhà Xuất Bản
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="language-tab" data-bs-toggle="tab" data-bs-target="#language" type="button" role="tab" aria-controls="language" aria-selected="false">
                Ngôn Ngữ
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="translator-tab" data-bs-toggle="tab" data-bs-target="#translator" type="button" role="tab" aria-controls="translator" aria-selected="false">
                Dịch giả
            </button>
        </li>
    </ul>
    <div class="tab-content mt-3" id="bookManagerTabsContent">
        <div class="tab-pane fade show active" id="book" role="tabpanel" aria-labelledby="book-tab">
            @Html.Action("BookView", "Book", new { page = ViewBag.CurrentPage ?? 1 })
        </div>
        <div class="tab-pane fade" id="bookISBN" role="tabpanel" aria-labelledby="bookISBN-tab">
            @Html.Action("BookISBNView", "Book")
        </div>
        <div class="tab-pane fade" id="bookTitle" role="tabpanel" aria-labelledby="bookTitle-tab">
            @Html.Action("BookTitleView", "Book")
        </div>
        <div class="tab-pane fade" id="categoryBook" role="tabpanel" aria-labelledby="categoryBook-tab">
            @Html.Action("CategoryBookView", "Book")
        </div>
        <div class="tab-pane fade" id="author" role="tabpanel" aria-labelledby="author-tab">
            @Html.Action("AuthorView", "Book")
        </div>
        <div class="tab-pane fade" id="publisher" role="tabpanel" aria-labelledby="publisher-tab">
            @Html.Action("PublisherView", "Book")
        </div>
        <div class="tab-pane fade" id="language" role="tabpanel" aria-labelledby="language-tab">
            @Html.Action("LanguageView", "Book")
        </div>
        <div class="tab-pane fade" id="translator" role="tabpanel" aria-labelledby="translator-tab">
            @Html.Action("TranslatorView", "Book")
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>