@model QuanLyThuVien.AccountRegister

@{
}

@section style{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 400px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .form-title {
            text-align: center;
            margin-bottom: 20px;
            color: #0d6efd;
        }

        .form-check {
            margin-top: 10px;
        }

        .card {
            width: 240px;
            height: 254px;
            padding: 0 15px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 12px;
            background: #fff;
            border-radius: 20px;
        }
    </style>
}

<section class="testimonial py-5" id="testimonial">
    <div class="container">
        <div class="row">
            <!-- Right Side Form -->
            <div class="card">
                <h4 class="pb-4 text-center">Tạo tài khoản</h4>
                @using (Html.BeginForm("AddAccountView", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="input-container">
                        @Html.TextBoxFor(m => m.Name, new { @class = "input-field", placeholder = "Họ tên" })
                        <label for="input-field" class="input-label">Họ và Tên</label>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-container">
                        @Html.TextBoxFor(m => m.Username, new { @class = "input-field", placeholder = "Tên đăng nhập" })
                        <label for="input-field" class="input-label">Tên đăng nhập</label>
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-container">
                        @Html.PasswordFor(m => m.Password, new { @class = "input-field", placeholder = "Mật khẩu" })
                        <label for="input-field" class="input-label">Mật khẩu</label>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-container">
                        @Html.PasswordFor(m => m.PasswordRetype, new { @class = "input-field", placeholder = "Nhập lại mật khẩu" })
                        <label for="input-field" class="input-label">Nhập lại mật khẩu</label>
                        @Html.ValidationMessageFor(m => m.PasswordRetype, "", new { @class = "text-danger" })
                    </div>
                    <div class="btn-container">
                        <div class="card-button-wrapper">
                            <button onclick="window.location.href='@Url.Action("AccountView", "Account")'" type="button" class="card-button secondary">
                                <i class="fa fa-times"></i> Hủy
                            </button>
                            <button type="submit" class="card-button primary">
                                <i class="fa fa-check"></i> Xác nhận
                            </button>
                        </div>
                    </div>

                }
                <div />
            </div>
        </div>
    </div>
</section>

@section script{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/css/textboxStyle.css" rel="stylesheet" />
    <link href="~/Content/css/addBtnSubmitStyle.css" rel="stylesheet" />
}
