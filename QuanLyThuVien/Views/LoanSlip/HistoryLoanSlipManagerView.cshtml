@{
    ViewBag.Title = "HistoryLoanSlipManagerView";
}

<div class="container mt-4">
    <h2 class="text-primary text-center mb-4">Quản Lý Phiếu Mượn Sách</h2>
    <ul class="nav nav-tabs" id="bookManagerTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="addHistoryLoanSlip-tab" data-bs-toggle="tab" data-bs-target="#addHistoryLoanSlip" type="button" role="tab" aria-controls="addHistoryLoanSlip" aria-selected="true">
                Trả sách
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="lstHistoryLoanSlip-tab" data-bs-toggle="tab" data-bs-target="#lstHistoryLoanSlip" type="button" role="tab" aria-controls="lstHistoryLoanSlip" aria-selected="false">
                Danh sách lịch sử Phiếu mượn
            </button>
        </li>
    </ul>
    <div class="tab-content mt-3" id="bookManagerTabsContent">
        <div class="tab-pane fade show active" id="addHistoryLoanSlip" role="tabpanel" aria-labelledby="addHistoryLoanSlip-tab">
            @Html.Action("GetQRLoanSlipView", "LoanSlip")
        </div>
        <div class="tab-pane fade" id="lstHistoryLoanSlip" role="tabpanel" aria-labelledby="lstHistoryLoanSlip-tab">
            @Html.Action("HistoryLoanSlipDetailView", "LoanSlip")
        </div>
    </div>
</div>
