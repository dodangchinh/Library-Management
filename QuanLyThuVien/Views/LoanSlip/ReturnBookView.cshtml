        .card-subtitle {
            font-size: 12px;
            font-weight: 400;
            color: var(--font-color-sub);
            word-wrap: break-word;
            white-space: normal;
        }

        .card-footer {
            display: flex;
            justify-content: space-between; /* Căn đều hai bên */
            align-items: center;
            width: 100%; /* Chiều rộng full trong card */
